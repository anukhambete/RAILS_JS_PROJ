<div class="background-image-users">

<div class="new-user center">
<h1>Returning Users Login</h1>

<h2>Sign In</h2>

<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>
  <% if @user.errors.messages[:password] %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
            <li><%= @user.errors.messages[:password] %></li>
        </ul>
      </div>
    <% end %>

  <div class="field">
    <%= f.text_field :username, placeholder: "username" %>
  </div></br>

  <div class="field">
  <%= f.text_field :password, placeholder: "password" %>
  </div></br>

  <div class="actions">
  <%= f.submit "Sign In"%>
  </div>
<% end %>


</div>
</div>
